<div class="special-hero special-hero--fluid-height {{ modifier_class }}">
  <div id="{{ heroId }}">
    <div class="special-hero__content" style="background-image: url({{ background }});">
      <div class="special-hero__content-inner content-container">
        {{#if title}}
          <h1 class="special-hero__title">{{{ title }}}</h1>
        {{/if}}
        {{#if subtitle}}
          <h5 class="special-hero__subtitle">{{{ subtitle }}}</h5>
        {{/if}}
        {{#if content}}
          {{{ content }}}
        {{/if}}
      </div>
    </div>
  </div>

  <div class="reveal__content" id="{{ revealId }}">
    <div class="content-container">
      {{#if revealVid}}
        <div style="display: block; position: relative; max-width: 100%;">
          <div style="display: block; padding-top: 56%;">
            <video data-video-id="{{revealVid}}" data-account="3798483592001" data-player="ad8b15bd-b737-4c9b-a550-53c61ac31107" data-embed="default" class="video-js" controls="" style="width: 100%; height: 100%; position: absolute; top: 0px; bottom: 0px; right: 0px; left: 0px;"></video>
            <script src="//players.brightcove.net/3798483592001/ad8b15bd-b737-4c9b-a550-53c61ac31107_default/index.min.js"></script>
          </div>
        </div>
      {{else}}
        {{{ revealContent }}}
      {{/if}}
    </div>
  </div>
</div>
