<div class="special-hero special-hero--fluid-height {{ modifier_class }}">
  <div id="{{ curtainId }}">
    <div class="special-hero__content" style="background-image: url({{ background }});">
      <div class="special-hero__content-inner content-container">
        {{#if title}}
          <h1 class="special-hero__title">{{{ title }}}</h1>
        {{/if}}
        {{#if subtitle}}
          <h5 class="special-hero__subtitle">{{{ subtitle }}}</h5>
        {{/if}}
        {{#if content}}
          {{{ content }}}
        {{/if}}
      </div>
    </div>
  </div>

  {{#with reveal}}
    {{> reveal-helper}}
  {{/with}}
</div>
