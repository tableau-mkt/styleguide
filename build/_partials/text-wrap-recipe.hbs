{{#with image}}

<!-- Code example for a LEFT aligned image with wrapped text -->
<div class="wrapper">
  <h2>Text Wrap Left</h2>
<!-- START: Left Wrap -->
  {{> image modifier_class="image--textwrap-left" }}
<!-- END: Left Wrap -->
</div>

<!-- Code example for a RIGHT aligned image with wrapped text -->
<div class="wrapper">
  <h2>Text Wrap Right</h2>
<!-- START: Right Wrap -->
  {{> image modifier_class="image--textwrap-right" }}
<!-- END: Right Wrap -->
</div>

{{/with}}
