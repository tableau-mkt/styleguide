<div class="feature-highlight {{ modifier_class }}" {{#if reveal}} id="{{ reveal.curtainId }}"{{/if}}>

  <div class="feature-highlight__image">
    {{#with thumbnail}}
      <img src="{{ src }}" alt="{{ alt }}" />
    {{/with}}
  </div>

  <div class="feature-highlight__copy">
    {{#if heading}}
      <h3 class="heading-highlight">{{ heading }}</h3>
    {{/if}}

    {{#if copy}}
      {{{ copy }}}
    {{/if}}

    {{#if link}}
      {{#with link}}
        {{> link-formatted}}
      {{/with}}
    {{/if}}
  </div>
</div>
