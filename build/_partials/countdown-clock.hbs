<div class="countdown-clock {{ modifier_class }}" data-clock-deadline="{{ deadline }}">
    <h3 class="countdown-clock__header"> {{ title }} </h3>
    <div class="countdown-clock__time">
       <div class="countdown-clock__days countdown_clock__number">00</div>
       <div class="countdown-clock__label">Days</div>
    </div>
    <div class="countdown-clock__time">
       <div class="countdown-clock__hours countdown_clock__number">00</div>
       <div class="countdown-clock__label">Hours</div>
    </div>
    <div class="countdown-clock__time">
       <div class="countdown-clock__minutes countdown_clock__number">00</div>
       <div class="countdown-clock__label">Minutes</div>
    </div>
    <div class="countdown-clock__time">
       <div class="countdown-clock__seconds countdown_clock__number">00</div>
       <div class="countdown-clock__label">Seconds</div>
    </div>
</div>

