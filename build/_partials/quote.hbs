<div class="quote {{ modifier_class }}">
  <p class="quote__text">{{ quoteText }}</p>
  <p class="quote__byline">
    {{#if bylineName}}
      <span class="quote__byline-name">{{ bylineName }}{{#if bylineDetail}},{{/if}}</span>
    {{/if}}
    {{#if bylineDetail}}
      <span class="quote__byline-detail">{{ bylineDetail }}</span>
    {{/if}}
  </p>
</div>
