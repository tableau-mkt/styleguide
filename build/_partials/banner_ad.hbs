<div class="page-top-banner-ad {{ modifier_class }}" id="{{ id }}" style="background-image:url({{ background }});">

  <div class="page-top-banner-ad__close">
    <a href="#">
      <i class="icon icon--close-window-style2"></i>
    </a>
  </div>

  <div class="page-top-banner-ad__content content-container">
    <h2>{{ title }}</h2>
    <p>
      <a href="{{ link.url }}" class="cta cta--secondary">{{ link.text }}</a>
    </p>
  </div>
</div>
