<a class="data-source-link{{#if color }} data-source-link--{{color}}{{/if}}{{#if class }} {{ class }}{{/if}} {{modifier_class}}" href="{{ url }}"{{#if flyoutTarget }} data-flyout-target="{{ flyoutTarget }}"{{/if}}{{#if tabContent }} data-tab-content="{{ tabContent }}"{{/if}}>
  <span class="data-source-link__number">{{ number }}</span>
  <span class="data-source-link__label text--label">
    {{#if label}}
      {{ label }}
    {{else}}
      Data Sources
    {{/if}}
  </span>
</a>
