<div class="reveal__content" id="{{ contentId }}">
  <div class="clearfix{{#if container}} content-container{{/if}}">
    {{#if video}}
      <div class="reveal__video">
        <video data-reveal-account="{{ account }}" data-reveal-player="{{ player }}" data-reveal-video-id="{{ video }}" class="video-js" controls></video>
      </div>
    {{else}}
      {{{ content }}}
    {{/if}}
  </div>
</div>
