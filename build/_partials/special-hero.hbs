<div class="special-hero {{ modifier_class }}">
  <div id="{{ heroId }}">

    {{#if brightcoveId}}
      <div class="special-hero__video">
        <div class="special-hero__video-inner bg-cover" style="background-image: url({{ background }});">
          <![if gt IE 8]>
          <video data-video-id="{{ brightcoveId }}" data-account="3798483592001" data-player="68382327-2210-45c8-920a-a606cbb6de49" data-embed="default" class="video-js" poster="{{ background }}" loop autoplay>
          </video>
          <script src="//players.brightcove.net/3798483592001/68382327-2210-45c8-920a-a606cbb6de49_default/index.min.js"></script>
          <![endif]>
        </div>
      </div>
    {{else}}

      {{#if video}}
        <div class="special-hero__video">
          <div class="special-hero__video-inner">
            <video autoplay="" loop="">
              <source src="{{ video }}" type="video/mp4">
              <img src="{{ background }}">
            </video>
          </div>
        </div>
      {{/if}}

    {{/if}}

    {{#if background}}
      <div class="special-hero__background">
        <div class="special-hero__background-inner" style="background-image: url({{ background }});">
        <!--[if lt IE 9]>
          <img class="special-hero__background-fallback" src="{{ background }}">
        <![endif]-->
        </div>
      </div>
    {{/if}}

    {{#if content}}
      <div class="special-hero__content">
        <div class="special-hero__content-inner content-container">
          {{{ content }}}
        </div>
      </div>
    {{/if}}

  </div>

  {{#if revealContent}}
    <div class="reveal__content" id="{{ revealId }}">
      {{{ revealContent}}}
    </div>
  {{/if}}
</div>
