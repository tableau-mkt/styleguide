<div class="form">
  <div class="form-field has-float-label {{modifier_class}}">
    <label class="form-field__label" for="text-invalid">Text Field:</label>
    <input class="form-field__control" type="text" name="text-invalid" id="text-invalid" placeholder="text">
    <div class="form-field__description"><span class="form-field__error">This field is required.</span></div>
  </div>

  <div class="form-field {{modifier_class}}">
    <label class="form-field__label" for="text-invalid-2">Text Field (No Placeholder)</label>
    <br>
    <input class="form-field__control" type="text" name="text-invalid-2" id="text-invalid-2">
    <div class="form-field__description"><span class="form-field__error">This field is required.</span></div>
  </div>

  <div class="form-field has-float-label {{modifier_class}}">
    <label class="form-field__label" for="email-invalid">Email Field:</label>
    <input class="form-field__control" type="email" name="email-invalid" id="email-invalid" placeholder="email">
    <div class="form-field__description"><span class="form-field__error">This field is required.</span></div>
  </div>
</div>
